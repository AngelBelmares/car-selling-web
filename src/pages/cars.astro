<Layout title="Autos en venta">
  <div class="flex flex-col max-w-screen-xl h-full w-full">
    <h1 class="self-center text-2xl text-logan-300 my-8">Nuestros veh√≠culos en venta</h1>
    <section>

    </section>
    <section class="grid grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-4">
      {carList.map((car: Car) =>  {
        return ((
          <article class="flex flex-col">
            <img src={car.image} alt={car.name} class="w-full aspect-video object-cover" />
            <h2 class="text-xl">{car.name}</h2>
            <p>Price: {car.price}</p>
